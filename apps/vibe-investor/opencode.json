{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "openrouter/my-gpt-5.2",
  "small_model": "openrouter/my-gemini-3-flash",
  "enabled_providers": ["openrouter"],
  "provider": {
    "openrouter": {
      "options": {
        "apiKey": "{env:OPENROUTER_API_KEY}"
      },
      "models": {
        "my-gpt-5.2": {
          "id": "openai/gpt-5.2",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto"
          }
        },
        "my-kimi-2.5": {
          "id": "moonshotai/kimi-k2.5",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto"
          }
        },
        "my-gemini-3-pro": {
          "id": "google/gemini-3-pro-preview",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto"
          }
        },
        "my-gemini-3-flash": {
          "id": "google/gemini-3-flash-preview",
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          },
          "options": {
            "reasoningEffort": "high",
            "reasoningSummary": "auto"
          }
        }
      }
    }
  },
  "default_agent": "technical-analyst",
  "share": "disabled",
  "autoupdate": false,
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
    "cors": ["*"]
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "permission": {
    "write": "allow",
    "edit": "allow",
    "bash": "allow",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "webfetch": "deny",
    "doom_loop": "allow",
    "external_directory": "deny",
    "skill": "deny",
    "todoread": "deny",
    "todowrite": "deny",
    "question": "deny",
    "lsp": "deny"
  },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "explore": {
      "disable": true
    },
    "technical-analyst": {
      "description": "Expert technical analyst specializing in Indonesia Stock Market",
      "mode": "primary",
      "prompt": "{file:./prompts/technical-analyst/main.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "lsp": false
      }
    }
  }
}
